import /init.recovery.qcom_decrypt.rc
import /android.hardware.vibrator-sony.service.cs40l25.rc

service variant-script /system/bin/variant-script.sh
    user root
    group root
    disabled
    oneshot
    seclabel u:r:recovery:s0

service overrideprops /system/bin/set-timestamp.sh
    user root
    group root
    disabled
    oneshot
    seclabel u:r:recovery:s0

service load-mod /system/bin/load-mod.sh
    user root
    group root
    disabled
    oneshot
    seclabel u:r:recovery:s0

on init
    #start load-mod
    #exec u:r:recovery:s0 -- /system/bin/load-mod.sh
    write /sys/class/backlight/panel0-backlight/brightness 200
    # Create location for fs_mgr to store abbreviated output from filesystem
    # checker programs.
    mkdir /dev/fscklogs 0770 root system
    setprop vendor.usb.use_ffs_mtp 1

on fs
    wait /dev/block/platform/soc/${ro.boot.bootdevice}
    symlink /dev/block/platform/soc/${ro.boot.bootdevice} /dev/block/bootdevice
    # Mount firmware
    mkdir /firmware
    mount vfat /dev/block/bootdevice/by-name/modem${ro.boot.slot_suffix} /firmware ro
    # This must be under on fs, otherwise update_engine wont map the partitions and exit installation
    symlink /dev/block/bootdevice/by-name/oem_stanvbk /dev/block/bootdevice/by-name/oem_stanvbk_a
    symlink /dev/block/bootdevice/by-name/oem_stanvbk /dev/block/bootdevice/by-name/oem_stanvbk_b
    symlink /dev/block/bootdevice/by-name/oem_dycnvbk /dev/block/bootdevice/by-name/oem_dycnvbk_a
    symlink /dev/block/bootdevice/by-name/oem_dycnvbk /dev/block/bootdevice/by-name/oem_dycnvbk_b
    # Set fscklog permission
    chown root system /dev/fscklogs/log
    chmod 0770 /dev/fscklogs/log
    start boot-hal-1-2

on boot
    exec u:r:recovery:s0 -- /system/bin/variant-script.sh
    exec u:r:recovery:s0 -- /system/bin/set-timestamp.sh
    #start variant-script
    #start overrideprops
    setprop sys.usb.config adb

on property:twrp.modules.loaded=true
    # Load ADSP firmware for PMIC
    wait /sys/kernel/boot_adsp/boot
    write /sys/kernel/boot_adsp/boot 1
    wait /sys/class/power_supply/battery
    start health-hal-2-1

    #wait /sys/class/leds/vibrator/activate
    #wait /sys/class/leds/vibrator/brightness
    #wait /sys/class/leds/vibrator/rtp
    #wait /sys/class/leds/vibrator/vmax
    #wait /sys/class/leds/vibrator/waveform_index
    #wait /sys/class/leds/vibrator/state
    #wait /sys/class/leds/vibrator/duration

    #write /sys/class/leds/vibrator/activate 0
    #write /sys/class/leds/vibrator/rtp 0
    #write /sys/class/leds/vibrator/vmax 1600
    #write /sys/class/leds/vibrator/waveform_index 1
    #write /sys/class/leds/vibrator/brightness 1
    #write /sys/class/leds/vibrator/duration 80
    #write /sys/class/leds/vibrator/state 1

    #chown system system /sys/class/leds/vibrator/activate
    #chown system system /sys/class/leds/vibrator/brightness
    #chown system system /sys/class/leds/vibrator/rtp
    #chown system system /sys/class/leds/vibrator/vmax
    #chown system system /sys/class/leds/vibrator/waveform_index
    #chown system system /sys/class/leds/vibrator/state
    #chown system system /sys/class/leds/vibrator/duration

    start vendor.qti.vibrator
